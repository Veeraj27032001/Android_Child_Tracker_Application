<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".parentHome">


<LinearLayout
    android:id="@+id/parenthomebuttoncontainer"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/darkblue"
    android:layout_height="60dp">

    <ImageButton
        android:id="@+id/ParentHomeButton"
        android:layout_width="139dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"

        android:layout_weight="2"
        android:background="@android:color/transparent"
        android:src="@drawable/home" />

    <ImageButton
        android:id="@+id/addChildButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/ParentHomeButton"

        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:src="@drawable/add" />

    <ImageButton
        android:id="@+id/parentProfile"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="2"
        android:layout_toEndOf="@id/addChildButton"
        android:background="@android:color/transparent"
        android:src="@drawable/profile2" />
</LinearLayout>

    <FrameLayout
        android:id="@+id/parentFragmentContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/parenthomebuttoncontainer"
        android:background="@color/white" />
</RelativeLayout>