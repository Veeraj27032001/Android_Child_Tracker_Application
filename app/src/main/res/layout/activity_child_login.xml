<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parentActivity.MainActivity"
    android:background="@color/darkblue">

    <ImageView
        android:id="@+id/loginPageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/loginLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginPageImage"
        android:gravity="center"
        android:textColor="@color/white"
        android:text=" Child Log In"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Childloginemail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/loginLogo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/email"
        android:gravity="left|center"
        android:hint="EMAIL"
        android:textColorHint="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/Childloginpassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/Childloginemail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/password"
        android:gravity="left|center"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Childforgot"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/Childloginpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="195dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textColor="@color/SkyBlue"
        android:textSize="19sp" />

    <Button
        android:id="@+id/ChildLoginButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/Childforgot"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/rounded"
        android:text="Log In"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/ParentLogin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/ChildLoginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="Parent Login"
        android:textColor="@color/SkyBlue"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/Childloginprogress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/ParentLogin"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:visibility="invisible" />

</RelativeLayout>