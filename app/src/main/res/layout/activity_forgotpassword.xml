<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".forgotpassword.forgotpassword">
    <ImageView
        android:id="@+id/forgotPageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/forgotLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotPageImage"
        android:gravity="center"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/forgotemail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/forgotLogo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/email"
        android:gravity="left|center"
        android:hint="EMAIL"
        android:textColorHint="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/forgotemail"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/rounded"
        android:text="Reset Password"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/ResetButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="Go back to log in page ?"
        android:textColor="@color/SkyBlue"
        android:textSize="19sp" />


</RelativeLayout>