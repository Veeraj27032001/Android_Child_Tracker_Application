<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parentActivity.profileFragment"
    android:background="@color/darkblue">

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile_round"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/profileimage"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="NAME"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Email_lable"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profileName"
        android:layout_marginStart="40dp"
        android:layout_marginTop="18dp"
        android:text="EMAIL :"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:scrollbars="vertical"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/ProfileEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/profileName"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@+id/Email_lable"
        android:scrollbars="vertical"
        android:text="example@gmail.com"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/Child_Namelable"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Email_lable"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="Child Name:"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/ProfileChild_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ProfileEmail"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/Child_Namelable"
        android:scrollbars="vertical"
        android:text=""
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/profileChildEmailLable"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Child_Namelable"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="Child Email:"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/ProfileChildEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ProfileChild_name"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/profileChildEmailLable"
        android:scrollbars="vertical"


        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/profileremoveChild"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/profileChildEmailLable"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded"
        android:text="Remove child" />

    <Button
        android:id="@+id/profiledeleteMyAccount"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/profileChildEmailLable"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded"
        android:text="Delete my account" />

    <Button
        android:id="@+id/profileparentlogout"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/profileremoveChild"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded"
        android:text="Log out" />
</RelativeLayout>